@{
    ViewBag.Title = "Đặt hàng thành công";
}

<style>
    .btn-primary{
        background-color:chartreuse;
        color: black;
    }
    .btn-primary:hover {
        background-color:coral;
    }
    .btn-outline-secondary {
        background-color:deepskyblue;
        color:black;
    }

        .btn-outline-secondary:hover {
            background-color: coral;
        }
</style>
<div class="container mt-4" style="text-align: center;">
    <div>
        <h2 class="text-success" style="margin-bottom: 20px; margin-top: 40px;">
            <i class="fas fa-check-circle"></i> @ViewBag.Message
        </h2>
        <p>Cảm ơn bạn đã mua sắm tại StyleZX. Chúng tôi sẽ liên hệ sớm để xác nhận và giao hàng.</p>
    </div>
    <img src="~/Images/favicon.ico" />
    <div>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
            <i class="fas fa-home"></i> Về trang chủ
        </a>

        <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-secondary mt-3">
            <i class="fas fa-list"></i> Đơn hàng của tôi
        </a>
    </div>
</div>
