@model StyleZX.Models.ProductVariant

@{
    ViewBag.Title = "Chi Tiết Biến Thể Sản Phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .text-center {
        margin-top: 0px;
        margin-bottom: 15px;
        font-family: 'Montserrat', sans-serif;
        font-size: 20px;
        font-weight: 600;
    }

    .detail-container {
        max-width: 1200px;
        margin: 10px auto;
        padding: 20px;
        background-color: antiquewhite;
        border-radius: 10px;
        font-family: 'Montserrat', sans-serif;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-group p {
            margin: 0;
            padding: 8px;
            background-color: white;
            border-radius: 4px;
            border: 1px solid #ddd;
        }

    .action-links {
        margin-top: 20px;
        text-align: center;
    }

    .btn {
        font-size: 14px;
        padding: 8px 20px;
        margin: 0 5px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-default {
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-default:hover {
            background-color: #5a6268;
        }
</style>

<div class="detail-container">
    <p class="text-center">Chi Tiết Biến Thể Sản Phẩm</p>

    <div style="display:flex; gap: 30px; max-width: 1200px; margin:0px; padding: 0px; background-color: antiquewhite; font-family: 'Montserrat', sans-serif;">
        <div style="flex: 1;">
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Product.Name)</label>
                <p>@Html.DisplayFor(model => model.Product.Name)</p>
            </div>

            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.ProductColor.ColorName)</label>
                <p>@Html.DisplayFor(model => model.ProductColor.ColorName)</p>
            </div>

            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.ProductSize.NameSize)</label>
                <p>@Html.DisplayFor(model => model.ProductSize.NameSize)</p>
            </div>

            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.Quantity)</label>
                <p>@Html.DisplayFor(model => model.Quantity)</p>
            </div>
        </div>

        
    </div>

    <div class="action-links">
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.ProductVariantId }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Quay lại danh sách", "ProductVariants", "Admin", null, new { @class = "btn btn-default" })
    </div>
</div>