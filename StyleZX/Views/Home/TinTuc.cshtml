@{
    ViewBag.Title = "Tin Tức";
}
<style>
    .text-tintuc p{
        margin: 10px;
        text-align:center;
        font-size: 20px;
        color: orangered;
    }
    .header-tieude {
        margin-top: 20px;
        margin-bottom: 40px;
        margin-left: 80px;
        font-size: 20px;
        font-family: 'Montserrat', sans-serif;
        text-align: center;
    }
    .news-section {
        padding: 20px 0;
        max-width: 1200px;
    }

    .section-title {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
        font-weight: bold;
    }

    .news-card {
        margin-bottom: 30px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }

    .news-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    .news-card a{
        text-decoration: none;
    }

    .news-image {
        width: 100%;
        aspect-ratio: 1 / 1;
        object-fit: cover;
        border-radius: 0;
        display: block;
    }


    .news-title {
        padding: 15px;
        text-align: center;
        font-size: 16px;
        color: #333;
        background: #f8f9fa;
        font-weight: 600;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .news-item {
            margin-bottom: 20px;
        }
    }
</style>
