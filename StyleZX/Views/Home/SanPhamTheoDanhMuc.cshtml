@model StyleZX.Controllers.HomeController.CategoryWithProductsViewModel

@{
    ViewBag.Title = "Sản phẩm theo danh mục";
}

<style>
    .category-section {
        margin: 0 5%;
        margin-bottom: 30px;
        padding: 15px;
        background-color: #f9f9f9;
        border-radius: 8px;
    }

    .product-list {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
    }

    .product-card {
        background-color: white;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
        cursor: pointer;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .product-image {
        width: 100%;
        object-fit: contain;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
        margin-bottom: 10px;
        border-radius: 10px;
    }

    .product-name {
        font-size: 16px;
        color: #333;
        margin: 5px 0;
        height: 40px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .product-price {
        font-size: 18px;
        font-weight: bold;
        color: #d32f2f;
        margin: 5px 0;
    }

    .product-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 5px;
    }

    .btn-icon {
        color: #555;
        font-size: 18px;
        padding: 8px;
        border-radius: 50%;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        text-decoration: none;
        background-color: #f5f5f5;
    }

        .btn-icon:hover {
            background-color: #e0e0e0;
            color: #333;
        }

        .btn-icon:nth-child(1):hover {
            color: #28a745;
            background-color: rgba(40, 167, 69, 0.1);
        }

        .btn-icon:nth-child(2):hover {
            color: #007bff;
            background-color: rgba(0, 123, 255, 0.1);
        }

    .tieude p {
        padding: 5px 20px;
        font-family: 'Montserrat', sans-serif;
        font-size: 20px;
        line-height: 1.6;
        font-weight: 500;
        text-align: center;
        margin-bottom: 0;
    }

    .tieude {
        margin-bottom: 20px;
        background-color: #ffc0cb;
        display: flex;
        justify-content: center;
        align-items: center;
        width: fit-content;
        border-radius: 10px;
        padding: 5px 15px;
    }

    .sort-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        margin: 0 5% 20px 5%;
    }

    .sort-box {
        display: flex;
        align-items: center;
        font-family: 'Montserrat', sans-serif;
        font-size: 14px;
    }

    .sort-select {
        width: auto;
        border: none;
        font-weight: 500;
        color: #333;
        background: transparent;
        appearance: none;
        cursor: pointer;
    }
</style>

<div style="margin-top: 20px; justify-content: center; align-items: center">
    <div class="sort-container">
        <p style="margin-top: 20px; margin-left: 5px; font-size: 15px; font-family: 'Montserrat', sans-serif;">CÁC SẢN PHẨM @Model.Category.Name.ToUpper()</p>
        <form method="get" onchange="this.submit();">
            <input type="hidden" name="categoryId" value="@ViewBag.CategoryId" />
            <div class="sort-box">
                <strong style="margin-right: 5px;">Sắp xếp theo:</strong>
                <select name="sortBy" class="form-control sort-select">
                    <option value="newest" @(ViewBag.SortBy == "newest" ? "selected" : "")>Mới nhất</option>
                    <option value="price_asc" @(ViewBag.SortBy == "price_asc" ? "selected" : "")>Giá thấp đến cao</option>
                    <option value="price_desc" @(ViewBag.SortBy == "price_desc" ? "selected" : "")>Giá cao đến thấp</option>
                </select>
            </div>
        </form>

    </div>

    <div class="category-section">
        <div class="tieude">
            <p>&mdash; @Model.Category.Name.ToUpper() &mdash;</p>
        </div>
        <div class="product-list">
            @foreach (var product in Model.Products)
            {
                <div class="product-card" onclick="location.href='@Url.Action("DetailProduct", "Product", new { id = product.ProductId })'">
                    <img src="~/Images/@product.ImageUrl" alt="@product.ProductName" class="product-image" />
                    <p style="font-weight:bold; font-size: 15px" class="product-name">@product.ProductName</p>
                    <p class="product-price">@product.Price.ToString("N0") <u style="font-size: 15px; vertical-align: super;">đ</u></p>
                    <div class="product-actions">
                        <a href="@Url.Action("DetailProduct", "Product", new { id = product.ProductId })" onclick="return handleClick(event);" class="btn-icon" title="Thêm vào giỏ hàng">
                            <i class="fas fa-cart-plus"></i>
                        </a>
                        <a href="@Url.Action("DetailProduct", "Product", new { id = product.ProductId })" onclick="event.stopPropagation()" class="btn-icon" title="Xem chi tiết">
                            <i class="fas fa-eye"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script>
        function handleClick(event) {
            event.stopPropagation();
            return confirm('Bạn cần chọn màu và size cho sản phẩm!');
        }
    </script>
}
