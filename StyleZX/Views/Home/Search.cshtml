@model IEnumerable<StyleZX.Models.ViewModel.ProductSearchResultViewModel>

@{
    ViewBag.Title = "Kết quả tìm kiếm";
}

<style>
    .search-result-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .search-header {
        margin-bottom: 10px;
        font-family: 'Montserrat', sans-serif;
        font-size: 22px;
        font-weight: 500;
        color: #2c3e50;
        text-align: center;
    }

    .product-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .product-card {
        background-color: #fff;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
        cursor: pointer;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .product-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .product-name {
        font-size: 16px;
        font-weight: 500;
        color: #333;
        height: 40px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .product-price {
        font-size: 18px;
        font-weight: bold;
        color: #e53935;
        margin-top: 5px;
    }

    .product-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 10px;
    }

    .btn-icon {
        color: #555;
        font-size: 18px;
        padding: 8px;
        border-radius: 50%;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        background-color: #f5f5f5;
    }

        .btn-icon:hover {
            background-color: #e0e0e0;
        }

    .no-results {
        text-align: center;
        font-size: 16px;
        color: #888;
        margin-top: 50px;
    }
</style>

<div style="margin-top: 30px; justify-content: center; align-items: center">
    <div class="search-result-container" style="background-color: #f9f9f9; margin-bottom: 30px; padding: 20px; border-radius: 8px; ">
        <h2 class="search-header">KẾT QUẢ TÌM KIẾM <span style="font-size: 20px; font-weight: 400">(@Model.Count() sản phẩm)</span></h2>
        @if (!Model.Any())
        {
            <p class="no-results">Không tìm thấy sản phẩm phù hợp với từ khóa tìm kiếm của bạn.</p>
        }
        else
        {
            <form method="get" style="display: flex; justify-content: flex-end; align-items: center; margin-bottom: 20px;" onchange="this.submit();">
                <input type="hidden" name="query" value="@ViewBag.Query" />
                <strong style="margin-right: 5px;">Sắp xếp theo:</strong>
                <select name="sortBy" class="form-control" style="width: auto; border: none; font-weight: 500; background: transparent; cursor: pointer;">
                    <option value="newest" @(ViewBag.SortBy == "newest" ? "selected" : "")>Mới nhất</option>
                    <option value="price_asc" @(ViewBag.SortBy == "price_asc" ? "selected" : "")>Giá thấp đến cao</option>
                    <option value="price_desc" @(ViewBag.SortBy == "price_desc" ? "selected" : "")>Giá cao đến thấp</option>
                </select>
            </form>
            <div class="product-list">
                @foreach (var product in Model)
                {
                    <div class="product-card" onclick="location.href='@Url.Action("DetailProduct", "Product", new { id = product.ProductId })'">
                        <img src="~/Images/@product.ImageUrl" alt="@product.ProductName" class="product-image" />
                        <div class="product-name">@product.ProductName</div>
                        <div class="product-price">@product.Price.ToString("N0") <u style="font-size: 15px; vertical-align: super;">đ</u></div>

                        <div class="product-actions">
                            <a href="@Url.Action("DetailProduct", "Product", new { id = product.ProductId })" onclick="return handleClick(event);" class="btn-icon" title="Thêm vào giỏ hàng">
                                <i class="fas fa-cart-plus"></i>
                            </a>
                            <a href="@Url.Action("DetailProduct", "Product", new { id = product.ProductId })" onclick="event.stopPropagation()" class="btn-icon" title="Xem chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        function handleClick(event) {
            event.stopPropagation();
            return confirm("Bạn cần chọn màu và size trước khi thêm vào giỏ hàng.");
        }
    </script>
}
