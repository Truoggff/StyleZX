@model List<StyleZX.Controllers.HomeController.CategoryWithProductsViewModel>

@{
    ViewBag.Title = "Quần";
}
<style>
    .category-section {
        margin: 0 5%;
        margin-bottom: 30px;
        padding: 15px;
        background-color: #f9f9f9;
        border-radius: 8px;
    }

        .category-section h3 {
            color: #333;
            font-size: 22px;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eee;
        }

    .product-list {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
    }

    .product-card {
        background-color: white;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
        cursor: pointer;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    .product-image {
        width: 100%;
        object-fit: contain;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
        margin-bottom: 10px;
        border-radius: 10px;
    }

    .product-name {
        font-size: 16px;
        color: #333;
        margin: 5px 0;
        height: 40px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .product-price {
        font-size: 18px;
        font-weight: bold;
        color: #d32f2f;
        margin: 5px 0;
    }

    .product-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 5px;
    }

    .btn-icon {
        color: #555;
        font-size: 18px;
        padding: 8px;
        border-radius: 50%;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        text-decoration: none;
        background-color: #f5f5f5;
    }

        .btn-icon:hover {
            background-color: #e0e0e0;
            color: #333;
        }

        .btn-icon:nth-child(1):hover {
            color: #28a745;
            background-color: rgba(40, 167, 69, 0.1);
        }

        .btn-icon:nth-child(2):hover {
            color: #007bff;
            background-color: rgba(0, 123, 255, 0.1);
        }

    hr {
        margin-top: 30px;
        border: 0;
        height: 1px;
        background-color: #eee;
    }

    .tieude p {
        padding: 5px;
        padding-left: 1.0rem;
        font-family: 'Montserrat', sans-serif;
        font-size: 20px;
        line-height: 1.6;
        font-weight: 300;
        text-align: center;
    }

    .tieude {
        margin-bottom: 10px;
        background-color: #ffc0cb;
        justify-content: center;
        align-items: center;
        width: fit-content;
        border-radius: 10px;
    }

    .header-tieude {
        margin-top: 20px;
        margin-left: 80px;
        font-size: 14px;
        font-family: 'Montserrat', sans-serif;
    }
</style>
<h2></h2>
@foreach (var categoryGroup in Model)
{
    <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap;">
        <p class="header-tieude">DANH SÁCH CÁC LOẠI QUẦN</p>
        <form method="get" style="margin: 0;" onchange="this.submit();">
            <div class="sort-box" style="display: flex; align-items: center; font-family: 'Montserrat', sans-serif; font-size: 14px; margin-right: 20px;">
                <strong style="margin-right: 5px;">Sắp xếp theo:</strong>
                <select name="sortBy" class="form-control sort-select" style="width: auto; border: none; font-weight: 500; color: #333; background: transparent; appearance: none; cursor: pointer;">
                    <option value="newest" @(ViewBag.SortBy == "newest" ? "selected" : "")>Mới nhất</option>
                    <option value="price_asc" @(ViewBag.SortBy == "price_asc" ? "selected" : "")>Giá thấp đến cao</option>
                    <option value="price_desc" @(ViewBag.SortBy == "price_desc" ? "selected" : "")>Giá cao đến thấp</option>
                </select>
            </div>
        </form>

    </div>
    <div class="category-section">
        <div class="tieude">
            <p>&mdash; @categoryGroup.Category.Name &mdash;</p>
        </div>

        <div class="product-list">
            @foreach (var product in categoryGroup.Products)
            {
                <div class="product-card" onclick="location.href='@Url.Action("DetailProduct", "Product", new { id = product.ProductId })'">
                    <img src="~/Images/@product.ImageUrl" alt="@product.ProductName" class="product-image" />
                    <h4 style="font-weight:bold" class="product-name">@product.ProductName</h4>
                    <p class="product-price">@product.Price.ToString("N0") <u style="font-size: 15px; vertical-align: super;">đ</u></p>

                    <div class="product-actions">
                        <a href="@Url.Action("DetailProduct", "Product", new { id = product.ProductId })" onclick="return handleClick(event);" class="btn-icon" title="Thêm vào giỏ hàng">
                            <i class="fas fa-cart-plus"></i>
                        </a>
                        <a href="@Url.Action("DetailProduct", "Product", new { id = product.ProductId })" onclick="event.stopPropagation()" class="btn-icon" title="Xem chi tiết">
                            <i class="fas fa-eye"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
        <hr />
    </div>
}
@section scripts {
    <script>
        function handleClick(event) {
            event.stopPropagation();
            return confirm('Bạn cần chọn màu và size cho sản phẩm!');
        }
    </script>
}