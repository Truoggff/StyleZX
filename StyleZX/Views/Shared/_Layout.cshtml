        }

            .dropdown-menu a {
                display: block;
                padding: 10px 15px;
                color: #d15f00; /* cam sáng tươi tắn */
                text-decoration: none;
                white-space: nowrap;
                font-weight: 500;
                transition: background-color 0.25s, color 0.25s;
            }

