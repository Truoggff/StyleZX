<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/Content/adminlte.min.css">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color:white;
        }
        .header-container {
            background-color: tomato;
            display: flex;
            align-items: center;
            gap: 10px;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.2);
        }

        .brand-link {
            display: flex;
            align-items: center;
            text-decoration: none;
            margin-left: 0px;
        }

        .search-box {
            display: flex;
            align-items: center;
            border: 2px solid #ff0080;
            border-radius: 5px;
            overflow: hidden;
            margin: 5px;
            margin-left: 50px;
            margin-right: 700px;
            height: 30px;
        }

            .search-box input {
                padding: 8px;
                border: none;
                width: 300px;
                outline: none;
                font-size: 14px;
            }

        .search-btn {
            padding: 8px 8px;
            border: none;
            background: linear-gradient(45deg, #ff0080, #ffcc00);
            cursor: pointer;
            color: white;
            font-size: 16px;
        }

        .brand-text {
            font-weight: 600;
            font-size: 20px;
            color: black;
        }

        .brand-image {
            height: 40px;
            width: 40px;
            object-fit: cover;
            border-radius: 50%;
            opacity: .8;
            margin-left: .8rem;
            margin-right: 10px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 15px 15px;
            text-decoration: none;
            color: inherit;

        }
            .nav-link p {
                margin: 0;
            }
        .user-inf {
            display: flex;
            gap: 2px;
            justify-content: center;

        }
        .nav-account-item {
            display: flex;
            align-items: center;
        }

        .account-name {
            font-weight: 500;
            color: #333;
            padding: 8px 0;
            font-size: 14px;
        }

        .profile-name {
            text-decoration: none;
            color: black;
        }

        .account-name :hover {
            color: black;
        }

        .sidebar {
            background-color:gainsboro;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.2);
            width: 15%;
            overflow-y: auto;
        }
        .nav-sidebar .nav-item a:hover {
            color: red;
        }

        .nav-sidebar .nav-item .nav-link.active {
            background-color:aqua;
            color: black;
            border-radius: 0 !important;
        }

        .nav-sidebar .nav-item .nav-link:hover {
            background-color:aliceblue;
            color: black;
            border-radius: 0 !important;
        }

        .nav-sidebar .nav-item .nav-link.active i {
            color: black;
            border-radius: 0 !important;
        }



        .content-wrapper {
            display: flex;
            flex-direction: row;
            padding: 20px;
            width: 85%;
            background-color:ivory;
            margin: 10px;
            border-radius: 8px;
            justify-content: center;

        }

        .group-container {
            display: flex;
            height: 100vh;
        }

        .copyright {
            background-color: white;
        }

        .copyright p {
            text-align: center;
            font-family: Montserrat;
            font-size: 15px;
            font-weight: bold;
            width: 100%;
            height:100%;
            margin: 0px;
        }


        
    </style>
</head>
<body>
    <nav class="header-container">
        <a class="brand-link" href="@Url.Action("Dashboards", "Admin")">
            <img src="~/Images/Logo_mauu.jpg" alt="Logo" class="brand-image">
            <span class="brand-text">StyleZX</span>
        </a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
        <form method="get" action="/Admin/SearchAll" class="search-box">
            <input type="text" name="keyword" placeholder="Search" />
            <button type="submit" class="search-btn">🔍</button>
        </form>


        @{
            var fullname = Session["FullName"] as string;
        }
        <div class="user-inf">
            <div class="nav-account-item">
                <span class="account-name">
                    <a href="@Url.Action("Profile", "Admin")" class="profile-name">
                        <i class="fas fa-user-circle"></i> @fullname
                    </a>
                </span>
            </div>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Account")">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="group-container">
        <aside class="sidebar">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                <li class="nav-item">
                    <a href="@Url.Action("Dashboards", "Admin")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboards" ? "active" : "")">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>Dashboard</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("Categories", "Admin")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Categories" ? "active" : "")">
                        <i class="nav-icon fas fa-list"></i>
                        <p>Danh mục sản phẩm</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("ProductImages", "Admin")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ProductImages" ? "active" : "")">
                        <i class="nav-icon fas fa-image"></i>
                        <p>Quản lý ảnh sản phẩm</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("ProductVariants", "Admin")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ProductVariants" ? "active" : "")">
                        <i class="nav-icon fas fa-fill-drip"></i>
                        <p>Quản lý biến thể</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Products", "Admin")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Products" ? "active" : "")">
                        <i class="nav-icon fas fa-tshirt"></i>
                        <p>Quản lý sản phẩm</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("Users", "Admin")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Users" ? "active" : "")">
                        <i class="nav-icon fas fa-users"></i>
                        <p>Quản lý người dùng</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("OrderManagement", "Admin")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "OrderManagement" ? "active" : "")">
                        <i class="nav-icon fas fa-shopping-cart"></i>
                        <p>Quản lý đơn hàng</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("Reports", "Admin")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Reports" ? "active" : "")">
                        <i class="nav-icon fas fa-chart-bar"></i>
                        <p>Thống kê</p>
                    </a>
                </li>

            </ul>
        </aside>
        <div class="content-wrapper">
            @RenderBody()





        </div>
    </div>
    <footer class="main-footer" style="">
        <div class="copyright" style="margin-bottom: 0px; background-color: antiquewhite;padding: 5px">
            <p>&copy; Copyright &reg; @DateTime.Now.Year - STYLEZX </p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- AdminLTE App -->
    <script src="~/Scripts/adminlte.min.js"></script>
    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>