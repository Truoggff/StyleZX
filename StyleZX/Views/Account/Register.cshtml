@model StyleZX.Controllers.AccountController.RegisterViewModel

@{
    ViewBag.Title = "Register";
}
<style>
    .login-container {
        display: flex;
        justify-content: center;
        padding: 40px 0;
        background-color: #f5f5f5;
    }

    .login-form {
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        width: 600px;
    }

    .login-table {
        width: 100%;
        border-collapse: collapse;
    }

    .login-header {
        text-align: center;
        padding-bottom: 20px;
    }

    .login-header h2 {
        color: #333;
        margin: 0;
        font-size: 24px;
    }

    .login-label {
        padding: 12px 10px;
        text-align: left;
        width: 35%;
        font-weight: bold;
        color: #555;
    }

    .login-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
    }

    .login-button-cell {
        padding-top: 20px;
        text-align: center;
    }

    .login-button {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 12px 25px;
        text-align: center;
        display: inline-block;
        font-size: 16px;
        margin: 10px 0;
        cursor: pointer;
        border-radius: 4px;
        width: 100%;
        transition: background-color 0.3s;
    }

    .login-button:hover {
        background-color: #45a049;
    }

    .login-links {
        text-align: center;
        padding-top: 15px;
        font-size: 14px;
        color: #666;
    }

    .login-links a {
        color: #4CAF50;
        text-decoration: none;
    }

    .login-links a:hover {
        text-decoration: underline;
    }

    .error-message {
        color: #e74c3c;
        font-size: 12px;
        display: block;
        margin-top: 5px;
    }
</style>

<div class="login-container">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "login-form" }))
    {
        @Html.AntiForgeryToken()

        <table class="login-table">
            <tr>
                <td colspan="2" class="login-header">
                    <h2>ĐĂNG KÝ TÀI KHOẢN</h2>
                </td>
            </tr>

            <tr>
                <td class="login-label">@Html.LabelFor(m => m.UserName)</td>
                <td>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "login-input", placeholder = "Tên đăng nhập (tối thiểu 6 ký tự)" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error-message" })
                </td>
            </tr>

            <tr>
                <td class="login-label">@Html.LabelFor(m => m.Password)</td>
                <td>
                    @Html.PasswordFor(m => m.Password, new { @class = "login-input", placeholder = "Mật khẩu (tối thiểu 8 ký tự)" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error-message" })
                </td>
            </tr>

            <tr>
                <td class="login-label">@Html.LabelFor(m => m.ConfirmPassword)</td>
                <td>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "login-input", placeholder = "Nhập lại mật khẩu" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "error-message" })
                </td>
            </tr>

            <tr>
                <td class="login-label">@Html.LabelFor(m => m.FullName)</td>
                <td>
                    @Html.TextBoxFor(m => m.FullName, new { @class = "login-input", placeholder = "Họ và tên" })
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "error-message" })
                </td>
            </tr>

            <tr>
                <td class="login-label">@Html.LabelFor(m => m.Email)</td>
                <td>
                    @Html.TextBoxFor(m => m.Email, new { @class = "login-input", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error-message" })
                </td>
            </tr>

            <tr>
                <td class="login-label">@Html.LabelFor(m => m.PhoneNumber)</td>
                <td>
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "login-input", placeholder = "Số điện thoại (tùy chọn)" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "error-message" })
                </td>
            </tr>

            <tr>
                <td class="login-label">@Html.LabelFor(m => m.Address)</td>
                <td>
                    @Html.TextBoxFor(m => m.Address, new { @class = "login-input", placeholder = "Địa chỉ (tùy chọn)" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "error-message" })
                </td>
            </tr>

            <tr>
                <td colspan="2" class="login-button-cell">
                    <button type="submit" class="login-button">ĐĂNG KÝ</button>
                </td>
            </tr>

            <tr>
                <td colspan="2" class="login-links">
                    @Html.ActionLink("Đã có tài khoản? Đăng nhập", "Login", "Account")
                </td>
            </tr>
        </table>
    }
</div>

@if (ViewBag.Message != null)
{
    <script>
        alert("@Html.Raw(ViewBag.Message)");
    </script>
}
