@model StyleZX.Controllers.AccountController.ForgotPasswordViewModel

@{
    ViewBag.Title = "Quên mật khẩu";
}

<style>
    .forgot-password-container {
        display: flex;
        justify-content: center;
        padding: 40px 0;
        background-color: #f5f5f5;
    }

    .forgot-password-form {
        background: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        width: 500px;
    }

    .forgot-password-table {
        width: 100%;
        border-collapse: collapse;
    }

    .forgot-password-header {
        text-align: center;
        padding-bottom: 20px;
    }

    .forgot-password-header h2 {
        color: #333;
        margin: 0;
        font-size: 24px;
    }

    .forgot-password-label {
        padding: 12px 10px;
        text-align: left;
        width: 40%;
        font-weight: bold;
        color: #555;
    }

    .forgot-password-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
    }

    .forgot-password-button-cell {
        padding-top: 20px;
        text-align: center;
    }

    .forgot-password-button {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 12px 25px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 10px 0;
        cursor: pointer;
        border-radius: 4px;
        width: 100%;
        transition: background-color 0.3s;
    }

    .forgot-password-button:hover {
        background-color: #45a049;
    }

    .forgot-password-links {
        text-align: center;
        padding-top: 15px;
        font-size: 14px;
        color: #666;
    }

    .forgot-password-links a {
        color: #4CAF50;
        text-decoration: none;
    }

    .forgot-password-links a:hover {
        text-decoration: underline;
    }

    .error-message {
        color: #e74c3c;
        font-size: 12px;
        display: block;
        margin-top: 5px;
    }
</style>

<div class="forgot-password-container">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "forgot-password-form" }))
    {
        @Html.AntiForgeryToken()

        <table class="forgot-password-table">
            <tr>
                <td colspan="2" class="forgot-password-header">
                    <h2>QUÊN MẬT KHẨU</h2>
                </td>
            </tr>
            <tr>
                <td class="forgot-password-label">
                    @Html.LabelFor(m => m.UserName, "Tên đăng nhập")
                </td>
                <td>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "forgot-password-input", placeholder = "Nhập tên đăng nhập" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error-message" })
                </td>
            </tr>
            <tr>
                <td class="forgot-password-label">
                    @Html.LabelFor(m => m.Email, "Email")
                </td>
                <td>
                    @Html.TextBoxFor(m => m.Email, new { @class = "forgot-password-input", placeholder = "Nhập email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error-message" })
                </td>
            </tr>
            <tr>
                <td class="forgot-password-label">
                    @Html.LabelFor(m => m.PhoneNumber, "Số điện thoại")
                </td>
                <td>
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "forgot-password-input", placeholder = "Nhập số điện thoại" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "error-message" })
                </td>
            </tr>
            <tr>
                <td class="forgot-password-label">
                    @Html.LabelFor(m => m.NewPassword, "Mật khẩu mới")
                </td>
                <td>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "forgot-password-input", placeholder = "Nhập mật khẩu mới" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "error-message" })
                </td>
            </tr>
            <tr>
                <td class="forgot-password-label">
                    @Html.LabelFor(m => m.ConfirmNewPassword, "Xác nhận lại")
                </td>
                <td>
                    @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "forgot-password-input", placeholder = "Xác nhận mật khẩu mới" })
                    @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "error-message" })
                </td>
            </tr>
            <tr>
                <td colspan="2" class="forgot-password-button-cell">
                    <button type="submit" class="forgot-password-button">Đổi mật khẩu</button>
                </td>
            </tr>
            <tr>
                <td colspan="2" class="forgot-password-links">
                    @Html.ActionLink("Quay lại đăng nhập", "Login", "Account")
                </td>
            </tr>
        </table>
    }
</div>

@if (ViewBag.Message != null)
{
    <script>
        alert("@Html.Raw(ViewBag.Message)");
    </script>

}
