@model PagedList.IPagedList<Product>

@using PagedList.Mvc;
@using StyleZX.Models


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<style>
    .manage-product-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
        width: 100%;
        max-width: 1200px;
        padding: 10px;
        padding-top: 0px;
        align-items: center;
    }
    .tieude-ds {
        margin-top: 0px;
        margin-bottom: 15px;
        font-family: 'Montserrat', sans-serif;
        font-size: 20px;
        font-weight: 500;
        padding-top: 0px;
    }
    .table thead th {
        text-align: center;
    }
    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding-left: 0;
        gap: 5px;
    }

        .pagination li {
            display: inline;
        }

            .pagination li a,
            .pagination li span {
                color: #007bff;
                padding: 6px 12px;
                border: 1px solid #ddd;
                border-radius: 4px;
                text-decoration: none;
            }

                .pagination li a:hover {
                    background-color: #e9ecef;
                    border-color: #ccc;
                }

        .pagination .active span {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }
</style>
<div class="manage-product-container">
    <nav class="tieude-ds">DANH SÁCH SẢN PHẨM</nav>
    <div style="text-align: left">
        <form method="get" asp-action="Products" style="margin-left: 0px;">
            <div style="display: flex; align-items: center; gap: 10px; ">
                <nav style="font-size:18px">Lọc sản phẩm</nav>
                <div style=" width: 180px;">
                    @Html.DropDownList("CategoryId", (SelectList)ViewBag.Categories, "Tất cả danh mục", new
                    {
                        @class = "form-control",
                        onchange = "this.form.submit();"
                    })
                </div>
            </div>
        </form>
    </div>

    <div style="width: 100%; display: flex; justify-content: flex-start; margin-top: 10px;">
        <a href="@Url.Action("Create", "Product")" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Thêm sản phẩm
        </a>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr style=" background-color:burlywood">
                <th>Tên Sản Phẩm</th>
                <th>Mô Tả</th>
                <th>Giá</th>
                <th>Danh Mục</th>
                <th colspan="3">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("N0") đ</td>
                    <td>@item.CategoryId.ToString()</td>
                    <td style="width: 20px">
                        <a href="@Url.Action("Details", "Product", new { id = item.ProductId })" style="color:burlywood" class="btn-detail" title="Xem"><i class="fas fa-eye"></i></a>
                    </td>
                    <td style="width: 20px">
                        <a href="@Url.Action("Edit", "Product", new { id = item.ProductId })" style="color: #198754" class="btn-edit" title="Sửa"><i class="fas fa-edit"></i></a>
                    </td>
                    <td style="width: 20px">
                        <a href="@Url.Action("Delete", "Product", new { id = item.ProductId })" style="color: red" class="btn-delete" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang -->
    @if (Model.PageCount != 0 && Model.PageCount > 1)
    {
        <div class="text-center">
            @Html.PagedListPager(Model, page => Url.Action("Products", new { page, categoryId = Request.QueryString["CategoryId"] }))
        </div>
    }
</div>

