@model StyleZX.Controllers.CategoryManagementViewModel

@using PagedList.Mvc
@using PagedList

@{
    ViewBag.Title = "Category Management";
}
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .manage-user-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
        width: 100%;
        max-width: 1200px;
        padding: 10px;
        align-items: center;
    }
    .tieude-ds {
        margin-top: 0px;
        margin-bottom: 15px;
        font-family: 'Montserrat', sans-serif;
        font-size: 20px;
        font-weight: 500;
    }
    .form-inline {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
    }


    .form-control {
        width: 250px;
        padding: 6px 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 6px 15px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
        border-radius: 6px;
        width: 50px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table thead th {
            text-align: center;
        }

        .table th,
        .table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table thead {
            background-color: #f8f8f8;
            font-weight: bold;
        }

        .table tbody tr td[colspan] {
            text-align: center;
            font-style: italic;
            color: #888;
        }

    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding-left: 0;
        gap: 5px;
    }

        .pagination li {
            display: inline;
        }

            .pagination li a,
            .pagination li span {
                color: #007bff;
                padding: 6px 12px;
                border: 1px solid #ddd;
                border-radius: 4px;
                text-decoration: none;
            }

                .pagination li a:hover {
                    background-color: #e9ecef;
                    border-color: #ccc;
                }

        .pagination .active span {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

    .text-center {
        color: black;
    }
</style>
<div class="manage-user-container">
    <nav class="tieude-ds">DANH SÁCH DANH MỤC SẢN PHẨM</nav>
    @using (Html.BeginForm("Categories", "Admin", FormMethod.Get))
    {
        <div class="search-user" style="display: flex;">
            <input type="text" name="searchString" value="@Model.SearchString" class="form-control mr-2" placeholder="Search" />
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
        </div>
    }

    <table class="table table-bordered table-striped">
        <thead>
            <tr style=" background-color:burlywood">
                <th>Tên Danh Mục</th>
                <th>Mô Tả</th>
                <th colspan="3">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Categories != null && Model.Categories.Any())
            {
                foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td style="width: 20px">
                            <a href="@Url.Action("Details", "Category", new { id = category.CategoryId })" style="color:burlywood" class="btn-detail" title="Xem"><i class="fas fa-eye"></i></a>
                        </td>
                        <td style="width: 20px">
                            <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })" style="color: #198754" class="btn-edit" title="Sửa"><i class="fas fa-edit"></i></a>
                        </td>
                        <td style="width: 20px">
                            <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })" style="color: red" class="btn-delete" title="Xóa"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No category found.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    @if (Model.Categories != null && Model.Categories.PageCount > 1)
    {
        <div class="text-center">
            @Html.PagedListPager(Model.Categories, page => Url.Action("Categories", new { page, searchString = Model.SearchString }))
        </div>
    }
    <div>

    </div>
</div>
